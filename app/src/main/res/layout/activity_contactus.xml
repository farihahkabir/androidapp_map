<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <TextView
        android:id="@+id/contactUsTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Contact Us"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/contactDetails"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="Contact us and we'll get back to you within 24 hours."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity= "left"
        android:textSize="18.5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id= "@+id/horizontalLayout"
        android:orientation= "horizontal"
        android:layout_marginTop= "20dp">

        <ImageView
            android:id= "@+id/locationImg"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src= "@drawable/location"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@+id/locationImg"
            android:text= "Dhaka Bangladesh"
            android:layout_marginTop="20dp"
            android:layout_marginLeft= "10dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id= "@+id/horizontalLay"
        android:orientation= "horizontal">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src= "@drawable/phone"
            android:layout_marginLeft= "5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:text= "01911400020"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id= "@+id/horizontalOut"
        android:orientation= "horizontal">

        <ImageView
            android:id= "@+id/email"
            android:layout_marginTop= "14dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src= "@drawable/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "1610891@iub.edu.bd"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>


</LinearLayout>